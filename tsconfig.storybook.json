{
  "extends": "./tsconfig.json",
  "composite": true,
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": ["**/**/*.spec.ts", "**/**/*.test.ts"],
  "include": [
    "**/**/*.stories.ts",
    "**/**/*.stories.js",
    "**/**/*.stories.jsx",
    "**/**/*.stories.tsx",
    "**/**/*.stories.mdx",
    ".storybook/*.js",
    ".storybook/*.ts"
  ]
}
