{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@env.mjs": ["env.mjs"],
      "@hooks": ["hooks/"],
      "@db/arrete": ["libs/private/db-arrete/src/index.ts"],
      "@db/evenementiel": ["libs/private/db-evenementiel/src/index.ts"],
      "@fichiers/arrete": ["libs/private/fichiers-arrete/src/index.ts"],
      "@fichiers/evenementiel": ["libs/private/fichiers-evenementiel/src/index.ts"],
      "@shared/components": ["libs/shared/components/src/index.ts"],
      "@shared/db": ["libs/shared/db/src/index.ts"],
      "@shared/db/server": ["libs/shared/db/src/server.ts"],
      "@shared/ui": ["libs/shared/ui/src/index.ts"],
      "@actions/auth": ["hooks/auth.ts"],
      "@actions/user": ["hooks/user.ts"],
      "@actions/email": ["hooks/email.ts"],
      "@validation/auth": ["hooks/validations/auth.ts"],
      "@icons": ["libs/shared/ui/src/lib/icons/index.tsx"],
      "@config": ["libs/shared/config/"],
      "@config/auth": ["libs/shared/config/auth.ts"],
      "@config/site": ["libs/shared/config/site.ts"],
      "@config/defaults": ["libs/shared/config/defaults.ts"],
      "@config/fonts": ["libs/shared/config/fonts.ts"],
      "@config/locales": ["libs/shared/config/locales.ts"],
      "@config/i18n": ["libs/shared/config/i18n.ts"],
      "@config/db": ["libs/shared/config/db.ts"],
      "@config/email": ["libs/shared/config/email.ts"],
      "@api/auth": ["libs/shared/ui/src/lib/api/auth/"],
    }
  },
  "exclude": ["node_modules", "tmp"]
}

